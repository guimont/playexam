# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/start/:id					controllers.Application.start(id: Long) 
GET     /                           controllers.Application.index
GET 	/reset   					controllers.Application.resetData

POST    /exo/:id       				controllers.Application.answer(id: Long) 
GET 	/exo/:id		  			controllers.Application.show(id: Long)


GET     /candidates                 controllers.Application.candidate

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
